<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

        <TextView
            android:id="@+id/name"
            android:text="Sample"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/dark_green"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/category"
            android:text="Sample"
            android:layout_marginLeft="6dp"
            android:textColor="@color/dark_gray_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <GridLayout
            android:id="@+id/gridlayout_estrellas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginVertical="15dp"
            android:columnCount="5"
            android:layout_gravity="clip_vertical|bottom">

            <ImageView
                android:id="@+id/estrella1_llena1"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginRight="7dp"
                app:srcCompat="@drawable/estrellarellena" />
            <ImageView
                android:id="@+id/estrella1_llena2"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginRight="7dp"
                app:srcCompat="@drawable/estrellarellena" />
            <ImageView
                android:id="@+id/estrella1_llena3"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginRight="7dp"
                app:srcCompat="@drawable/estrellarellena" />
            <ImageView
                android:id="@+id/estrella1_llena4"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginRight="7dp"
                app:srcCompat="@drawable/estrellarellena" />
            <ImageView
                android:id="@+id/estrella1_vacia5"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginRight="7dp"
                app:srcCompat="@drawable/estrellavaciamasrellena" />

        </GridLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>